{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "useDefineForClassFields": false,
        "target": "ESNext",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "skipLibCheck": true,
        "allowJs": false,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "types": ["node", "jest"],
        "paths": {
            "@app/*": ["src/*"],
            "@common/*": ["src/common/*"],
            "@config/*": ["src/config/*"],
            "@core/*": ["src/core/*"],
            "@decorators/*": ["src/core/decorators/*"],
            "@filters/*": ["src/core/filters/*"],
            "@modules/*": ["src/modules/*"],
            "@providers/*": ["src/providers/*"],
            "@services/*": ["src/common/helper/services/*"],
            "@utils/*": ["src/utils/*"],
            "@validators/*": ["src/core/validators/*"]
        }
    },
    "include": ["src/**/*.ts", "test/**/*.ts", "*.js", "prisma/**/*.ts"],
    "exclude": ["node_modules", "dist", "*coverage"]
}
